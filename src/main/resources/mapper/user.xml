<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mimo.server.dao.UserDao">
    <select id="getUser" parameterType="int" resultType="UserDto">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="getUserByAccessToken" parameterType="String" resultType="UserDto">
        SELECT * FROM user WHERE accesstoken = #{accessToken}
    </select>

    <insert id="signUp" parameterType="userDto" useGeneratedKeys="true" keyProperty="userId">
        INSERT
        INTO user (id,username, usercontact, accesstoken, refreshtoken)
        VALUES (0,#{userName}, #{userContact}, #{accessToken}, #{refreshToken});
    </insert>
</mapper>
